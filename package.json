{
  "name": "smarthome-js",
  "version": "0.2.0",
  "description": "A Node.JS library for controlling Broadlink devices",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "nodemon src/index.js",
    "test": "jest",
    "start": "npm run build && cross-env NODE_ENV=production node dist/index.js",
    "build": "cross-env NODE_ENV=production babel src -d dist",
    "clean": "rm -rf logs/",
    "install-service": "npm run build && winser -a -i --env NODE_ENV=production --startcmd \"node dist/index.js\"",
    "uninstall-service": "winser -x -r"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deanshub/smarthome-js.git"
  },
  "keywords": [
    "Broadlink",
    "IoT",
    "remote",
    "control"
  ],
  "author": "Dean Shub",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deanshub/smarthome-js/issues"
  },
  "homepage": "https://github.com/deanshub/smarthome-js#readme",
  "dependencies": {
    "@types/node": "^7.0.5",
    "broadlinkjs": "^0.1.0",
    "config": "^1.30.0",
    "cross-env": "^5.2.0",
    "fs-extra": "^6.0.1",
    "node-telegram-bot-api": "^0.30.0",
    "winser": "^1.0.3",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^5.9.0",
    "nodemon": "^1.18.6"
  }
}

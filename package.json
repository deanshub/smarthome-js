{
  "name": "smarthome-js",
  "version": "0.2.0",
  "description": "A Node.JS library for controlling Broadlink devices",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "nodemon src/index.js",
    "test": "jest",
    "start": "npm run build && cross-env NODE_ENV=production node dist/index.js",
    "build": "npm run clean && cross-env NODE_ENV=production babel src -d dist",
    "clean": "rm -rf dist/*",
    "clean-all": "rm -rf dist/* logs/*",
    "install-service": "npm run build && winser -a -i --env NODE_ENV=production --startcmd \"node dist/index.js\"",
    "uninstall-service": "winser -x -r"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deanshub/smarthome-js.git"
  },
  "keywords": [
    "Broadlink",
    "IoT",
    "remote",
    "control"
  ],
  "author": "Dean Shub",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deanshub/smarthome-js/issues"
  },
  "homepage": "https://github.com/deanshub/smarthome-js#readme",
  "dependencies": {
    "@types/node": "^7.0.5",
    "broadlinkjs": "^0.1.0",
    "config": "^1.30.0",
    "cross-env": "^5.2.0",
    "dateformat": "^3.0.3",
    "fs-extra": "^6.0.1",
    "later": "^1.2.0",
    "node-telegram-bot-api": "^0.30.0",
    "opn": "^5.4.0",
    "winser": "^1.0.3",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/runtime": "^7.3.1",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "eslint": "^5.9.0",
    "nodemon": "^1.18.6"
  }
}

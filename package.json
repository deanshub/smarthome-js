{
  "name": "smarthome-js",
  "version": "0.2.0",
  "description": "A Node.JS library for controlling Broadlink devices",
  "main": "dist/smarthome.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "webpack && npm run electron",
    "dev:watch": "concurrently \"webpack --watch\" \"nodemon\"",
    "test": "jest",
    "start": "npm run build && cross-env NODE_ENV=production npm run electron",
    "build": "cross-env NODE_ENV=production webpack",
    "clean-all": "rm -rf dist/* logs/*",
    "pkg": "pkg . --targets win --out-path dist",
    "install": "node installer.js install",
    "uninstall": "node installer.js uninstall",
    "electron": "electron ."
  },
  "bin": "index.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "devices/**/*",
      "signals/**/*",
      "config/**/*",
      "node_modules/opn/xdg-open",
      "node_modules/puppeteer/.local-chromium/**/*",
      "node_modules/win-audio/build/Release/audio.node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deanshub/smarthome-js.git"
  },
  "keywords": [
    "Broadlink",
    "IoT",
    "remote",
    "control"
  ],
  "author": "Dean Shub",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deanshub/smarthome-js/issues"
  },
  "homepage": "https://github.com/deanshub/smarthome-js#readme",
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^5.10.2",
    "auto-launch": "^5.0.5",
    "broadlinkjs": "^0.1.0",
    "config": "^3.2.1",
    "cross-env": "^5.2.0",
    "date-fns": "^2.0.1",
    "dateformat": "^3.0.3",
    "fa-svelte": "^3.0.0",
    "fs-extra": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "lanscanner": "^0.0.5",
    "lock-system": "^2.0.0",
    "node-telegram-bot-api": "^0.30.0",
    "node-webcam": "^0.5.0",
    "opn": "^6.0.0",
    "puppeteer": "^1.18.1",
    "win-audio": "^2.0.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.10.0",
    "ws": "^7.1.1"
  },
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/runtime": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^4.1.2",
    "css-loader": "^3.2.0",
    "electron": "^6.0.3",
    "eslint": "^6.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-loader": "^0.6.0",
    "nodemon": "^1.18.10",
    "pkg": "^4.4.0",
    "prettier": "^1.18.2",
    "style-loader": "^1.0.0",
    "svelte": "^3.9.1",
    "svelte-loader": "^2.13.6",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7",
    "webpack-node-externals": "^1.7.2"
  }
}
